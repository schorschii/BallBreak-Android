<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context="de.georgsieber.ballbreak.GameActivity">

    <de.georgsieber.ballbreak.GameView
        android:id="@+id/view_game"
        android:background="@android:color/black"
        android:layout_column="0"
        android:layout_row="0" />

    <GridLayout
        android:orientation="horizontal"
        android:id="@+id/grid_options"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_web"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="onClickWeb"
            android:text="georg-sieber.de"
            android:textAllCaps="true"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <Button
            android:id="@+id/btn_highscore"
            style="@android:style/Widget.Holo.Button"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="onClickHighscores"
            android:text="Highscores" />
    </GridLayout>

</GridLayout>
